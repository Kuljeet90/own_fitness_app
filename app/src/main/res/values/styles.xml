    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Time_Picker" parent="@android:style/Theme.Holo.Light">

        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme1" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="AppTheme2" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>
    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>
    <style name="AppTheme.NoActionBar"  parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.NoActionBar1"  parent="@style/AppTheme1">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar3"  parent="@style/AppTheme1">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar2"  parent="@style/AppTheme2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myToolbarTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="Theme_Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AppTheme.PopupOverlay">
    </style>
    <style name="FCMDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down_scale</item>
        <item name="android:windowExitAnimation">@anim/slide_down_scale</item>
    </style>
    <style name="BottomNavigationView">
        <item name="fontFamily">@font/overlock_regular</item>
    </style>



</resources>
