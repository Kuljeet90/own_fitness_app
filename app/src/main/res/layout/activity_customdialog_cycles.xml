<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black32">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="50dp"
        android:background="@drawable/shape_new">

        <RelativeLayout
            android:id="@+id/rlCountdowntimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"

            android:clickable="true"
            android:focusable="true">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overlock_regular"
                    android:text="@string/rest_time_str"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="22dp" />

            </RelativeLayout>


        </RelativeLayout>

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/countdownNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rlCountdowntimer"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            app:min="3" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/countdownNumberPicker"
            android:layout_width="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_grad2"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/calculate"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:fontFamily="@font/overlock_bold"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="18sp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
